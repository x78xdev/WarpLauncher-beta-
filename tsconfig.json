{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "main.ts",
        "preload.ts",
        "utils/**/*.ts",
        "types/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "renderer"
    ]
}